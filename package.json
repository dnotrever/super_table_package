        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@tanstack/react-table": "^8.21.3",
        "simplebar-react": "^3.3.2"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "sass-embedded": "^1.97.1",
        "typescript": "^5.9.3",
        "vite": "^7.3.0"
    }
