{
    "name": "@dnotrever/super-table",
    "version": "0.0.1",
    "private": false,
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./style.css": "./dist/style.css"
    },
    "style": "./dist/style.css",
    "sideEffects": [
        "**/*.css"
